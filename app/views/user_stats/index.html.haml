#load
  %ul#man.person
    - BodyPart.all.each do |part|
      %li{:style => "top: #{part.y}px; left: #{part.x}px", :name => part.name}= link_to part.name, '#'
  #parts
    - @user_stats.group_by(&:body_part).each do |part, stats|
      %div{:name => part.name, :class => 'body-part-form'}
        %h3= part.name
        = form_tag(user_stats_path, :remote => true, :id => 'edit_user_stats', :method => :put) do
          - stats.each do |stat|
            = fields_for "user_stats[]", stat do |f|
              = field_set_tag stat.name, :id => stat.name do
                %div{:class => 'form_errors'}
                  = render 'shared/form_errors', :object => stat
                %p.number
                  = f.label :current_value, 'Current'
                  %br/
                  = f.text_field :current_value, :class => 'number'
                  = stat.unit
                %p.number
                  = f.label :goal_value, 'Goal'
                  %br/
                  = f.text_field :goal_value, :class => 'number'
                  = stat.unit
                %p
                  = f.label :is_goal, 'Add goal?'
                  = f.check_box :is_goal
          = submit_tag 'Update'
